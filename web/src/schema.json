{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "views": {
            "type": "array",
            "minLength": 1,
            "items": {
                "type": "object",
                "properties": {
                    "width": { "type": "number", "minimum": 1, "format": "int32" },
                    "height": { "type": "number", "minimum": 1, "format": "int32" },
                    "insidePadding": { "type": "number", "minimum": 0 },
                    "roundness": { "type": "number", "minimum": 0 },
                    "outsidePadding": { "type": "number", "minimum": 0 },
                    "fillStyle": { "type": "string", "pattern": "#[0-9a-fA-F]+", "minLength": 7, "maxLength": 9 },
                    "strokeStyle": { "type": "string", "pattern": "#[0-9a-fA-F]+", "minLength": 7, "maxLength": 9 },
                    "backgroundSrc": { "type": "string" },
                    "modules": {
                        "type": "array",
                        "minLength": 1,
                        "items": {
                            "type": "object",
                            "properties": {
                                "module": {
                                    "enum": [
                                        "CO2Graph",
                                        "EnvGraph",
                                        "Status",
                                        "TemperatureGraph",
                                        "Weather",
                                        "WeatherGraph",
                                        "HorizontalWeather"
                                    ]
                                },
                                "x": { "type": "number", "minimum": 0, "format": "int32" },
                                "y": { "type": "number", "minimum": 0, "format": "int32" },
                                "width": { "type": "number", "minimum": 1, "format": "int32" },
                                "height": { "type": "number", "minimum": 1, "format": "int32" },
                                "settings": {
                                    "type": "object",
                                    "properties": {
                                        "timePeriod": { "type": "number", "minimum": 1, "format": "int32" },
                                        "times": {
                                            "uniqueItems": true,
                                            "minItems": 1,
                                            "type": "array",
                                            "items": { "type": "number", "format": "int32" }
                                        }
                                    }
                                }
                            },
                            "required": ["module", "x", "y", "width", "height", "settings"]
                        }
                    }
                },
                "required": [
                    "width",
                    "height",
                    "insidePadding",
                    "roundness",
                    "outsidePadding",
                    "fillStyle",
                    "strokeStyle",
                    "backgroundSrc",
                    "modules"
                ]
            }
        }
    },
    "required": ["views"]
}
